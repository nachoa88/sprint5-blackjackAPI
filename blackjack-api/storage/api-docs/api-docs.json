    "components": {
        "schemas": {
            "Game": {
                "properties": {
                    "id": {
                        "description": "The unique identifier of the game",
                        "type": "integer"
                    },
                    "user_uuid": {
                        "description": "The unique identifier of the user who played the game",
                        "type": "string"
                    },
                    "deck_id": {
                        "description": "The unique identifier of the deck used in the game",
                        "type": "integer"
                    },
                    "player_hand": {
                        "description": "The hand of the player in the game",
                        "type": "string"
                    },
                    "dealer_hand": {
                        "description": "The hand of the dealer in the game",
                        "type": "string"
                    },
                    "player_score": {
                        "description": "The score of the player in the game",
                        "type": "integer"
                    },
                    "dealer_score": {
                        "description": "The score of the dealer in the game",
                        "type": "integer"
                    },
                    "result": {
                        "description": "The result of the game, can be 'win', 'lose', or 'tie'",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "uuid": {
                        "description": "The unique identifier of the user",
                        "type": "string"
                    },
                    "nickname": {
                        "description": "The nickname of the user",
                        "type": "string"
                    },
                    "email": {
                        "description": "The email of the user",
                        "type": "string"
                    },
                    "wins": {
                        "description": "The number of wins of the user",
                        "type": "integer"
                    },
                    "losses": {
                        "description": "The number of losses of the user",
                        "type": "integer"
                    },
                    "ties": {
                        "description": "The number of ties of the user",
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
