                                        "total_losses_average": {
                                            "type": "number",
                                            "example": "0.30"
                                        },
                                        "total_ties_average": {
                                            "type": "number",
                                            "example": "0.18"
                                        },
                                        "user_details": {
                                            "type": "array",
